<!DOCTYPE html>
<html>
  <%= render "shared/head" %>
  <body>
    <%= render "layouts/logged_in_header" %>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type} center") %>
      <% end %>
      <%= yield %>
      <% if logged_in? %>
        <%= render "layouts/logged_in_footer" %>
      <% else %>
      	<div class="center">
          <br/>
          <br/>
          <br/>
      		<small>
      			&copy; Copyright 2015
            <%= link_to "Kuda Chess", root_path %>
      		</small>
      	</div>
      <% end %>
      <%= debug(params) if Rails.env.development? %>
    </div>
    <%= render "shared/google_analytics" %>
  </body>
</html>
