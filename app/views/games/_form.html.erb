<div class="col-md-6 col-md-offset-3">
  <%= form_for @game do |f| %>
    <%= render "shared/game_errors" %>
    <div class="well">
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <%= f.label :opponent_fname, "Opponent First Name", class: "sr-only" %>
            <%= f.text_field :opponent_fname, class: "form-control", placeholder: "Opponent\'s First Name*" %>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <%= f.label :opponent_lname, "Opponent Last Name", class: "sr-only" %>
            <%= f.text_field :opponent_lname, class: "form-control", placeholder: "Opponent\'s Last Name*" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :color, class: "sr-only" %>
        <%= f.text_field :color, class: "form-control", placeholder: "Color*: white or black" %>
      </div>
      <div class="form-group">
        <%= f.label :result, class: "sr-only" %>
        <%= f.text_field :result, class: "form-control", placeholder: "Result*: won, lost, or drew" %>
      </div>
      <div class="form-group">
        <%= f.label :day, class: "sr-only" %>
        <%= f.date_field :day, class: "form-control" %>
      </div>
      <p>
        <%= f.submit "Submit", class: "btn btn-default form-control" %>
      </p>
    </div>
  <% end %>
</div>
