<% if @game.errors.any? %>
  <div id="error_explanation">
    <h2>
      Yikes! There are
      <%= pluralize(@game.errors.count, "error") %>
      you need to fix:
    </h2>
    <ul>
      <% @game.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
